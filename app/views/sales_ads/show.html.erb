<h1><%= @sales_ad.title%></h1>
<span><%= t(@sales_ad.ad_state) %></span>
<p><%= @sales_ad.description %></p>
<%= render @sales_ad %>

<p><%=@sales_ad.description%></p>
<% @sales_ad.photos.each do |photo| %>
  <%= image_tag photo %>
<% end %>

<% if @sales_ad.active? %>
  <% unless @sales_ad.user == current_user %>
    <% if @conversation.nil?%>
      <p><%= link_to 'Tenho interesse', conversation_sales_ad_path(@sales_ad),
                                        method: :post %></p>
    <% else %>
      <ul class="list-group">
        <li class="list-group-item active">
          <%= "Conversa com #{@sales_ad.user.name}" %>
        </li>

        <%= render partial: 'conversations/conversation' %>
      </ul>
    <% end %>
  <% else %>
  <%= link_to 'Inativar este anuncio', inactive_sales_ad_path(@sales_ad),
      method: :put %>
  <% end %>
<% end %>
