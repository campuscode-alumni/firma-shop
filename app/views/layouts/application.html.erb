<!DOCTYPE html>
<html>
  <head>
    <title>FirmaShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container" wfd-id="32">
            <a class="navbar-brand" href="/"><%= image_tag 'logo-firma-shop.svg' %></a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation" wfd-id="103">
              <span class="navbar-toggler-icon" wfd-id="42"></span>
            </button>

          <div class="navbar-collapse collapse" id="navbarsExample07" style="" wfd-id="33">
            <ul class="navbar-nav ml-auto" wfd-id="35">
              <% if user_signed_in? %>
                <li class="nav-item ml-2 <%= active(conversations_path) %>" wfd-id="41">
                  <%= link_to 'Minhas Mensagens', conversations_path, class: 'nav-link', role: 'button' %>
                </li>
                <li class="nav-item" wfd-id="39">
                  <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'nav-link' %>
                </li>
                <li class="nav-item active ml-2" wfd-id="40">
                  <%= link_to 'Inserir AnÃºncio', new_sales_ad_path, class: 'nav-link btn btn-info', role: 'button' %>
                </li>
              <% end %>
            </ul>
            <!--<form class="form-inline my-2 my-md-0" wfd-id="34">
              <input class="form-control" type="text" placeholder="Search" aria-label="Search" kl_vkbd_parsed="true" wfd-id="93">
            </form>-->
          </div>
        </nav>
      </header>

      <main role='main'>
      <div class='container'>
        <br>
        <% if notice %>
          <div class="alert alert-success" role="alert">
            <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
          <p class="notice"><%= notice %></p>
        <% end %>
        <%= yield %>
      </div>
      </main>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
