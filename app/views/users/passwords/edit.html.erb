<div class="login-form">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <h2 class="text-center">Alterar Senha</h2>
    <%= f.error_notification %>
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>
    <div class="form-group">
      <%= f.input :password,
                required: true,
                input_html: { autocomplete: "new-password" }, placeholder: 'Nova Senha', label: false %>
      <em class="text-muted small"><%= "#{@minimum_password_length} caracteres no minimo" if @minimum_password_length %></em>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, required: true, placeholder: 'Confirme sua senha', label: false %>
    </div>
    <div class="form-group">
      <%= f.button :submit, "Alterar senha", class: 'btn btn-primary login-btn btn-block' %>
    </div>
    <div class="or-seperator"></div>
    <br>
    <p class="text-center text-muted small"><%= render "users/shared/links" %></p>
  <% end %>
</div>